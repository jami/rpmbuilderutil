{
	"rpm"         : "rpmbuilderutil-{VERSION}-{RELEASE}.{ARCH}",
	"name"        : "rpmbuilderutil",
	"version"     : "1.0.2",	
	"description" : "Utility tool to create rpm packages on the fly",
	"require"     : {		
		"perl"    : "*"
	},
	"files"       : [
		{
			"type"        : "file",
			"source"      : "rpmbuilderutil.pl",
			"destination" : "/usr/local/bin/rpmbuilderutil",
			"mode"        : "0755"
		}
	]
}
